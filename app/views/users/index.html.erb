<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>登录名</th>
      <th>昵称</th>
      <th>性别</th>
      <th>Email</th>
      <th>个人描述</th>
      <th>绑定QQ</th>
      <th>绑定微信</th>
      <th>头像路径</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.uid %></td>
        <td><%= user.loginname %></td>
        <td><%= user.username %></td>
        <td><%= user.sex %></td>
        <td><%= user.email %></td>
        <td><%= user.description %></td>
        <td><%= user.bandqq %></td>
        <td><%= user.bandwechat %></td>
        <td><%= user.imagepath %></td>
        <td><%= link_to '查看详细', user %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

